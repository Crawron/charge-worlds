    "ws": "^8.8.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^2.0.1",
    "@itsmapleleaf/configs": "^1.1.5",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/eslint": "^8.4.6",
    "@types/express": "^4.17.14",
    "@types/node": "^18.7.18",
    "@types/prettier": "^2.7.0",
    "@types/ws": "^8.5.3",
    "astro": "^1.2.6",
    "eslint": "^8.23.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.4",
